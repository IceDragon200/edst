<% render_tag = lambda do |node, node_ctx, d = 0| %>
<%   tag_name = node.key %> %>
<%   if tag_name.start_with?('&') %>
<%     case tag_name[1...tag_name.length] %>
<%     when /image(?:#(\S+))?/ %>
<%       ref = $1 || '' %>
<%       fn = node.value %>
<%       bsn = File.basename(fn) %>
<%       ex = "images/#{bsn}" %>
<%       asset = [fn, ex] %>
<%       asset_exports << asset %>
<%       (node_ctx.refs ||= {})[ref] = asset if ref.present? %>
<%     else %>
<%       alert.fixme node.kind, node.key, node.value %>
<%     end %>
<%   else %>
<%     tag_id = "tag-#{tag_name.downcase}" %>
<%   end %>
<% end %>
<% render_header = lambda do |value, depth = 0| %>
<%   return unless value.present? %>
<%   str = ". " + value + (" " * (depth + 1)) %>
<%=  str + ("." * [0, 80 - str.size].max) %>
<% end %>
<% render_tree = lambda do |tre, depth = 0| %>
<%   tre.each_child do |node| %>
<%     case node.kind %>
<%     when :dialogue_group %>
<%       render_tree.call(node, depth.succ) %>

<%     when :dialogue %>

<%=      node.key.upcase.center(80) %>
<%=      escape_lines(node.value, 40) { |s| (' ' * 20) + s } %>

<%     when :ln %>
* <%=      node.value %>
<%     when :list %>
<%       render_tree.call(node, depth.succ) %>

<%     when :header %>
<%       render_header.call(node.value, depth) %>

<%     when :label %>

<%=      " #{node.value} ".center(80, '.') %>

<%     when :split %>

<%=      '....'.center(80, ' ') %>

<%     when :comment %>
<%       word_wrap(node.value, line_width: 80).each_line do |line| %>
# <%=      line.chomp %>
<%       end %>
<%     when :tag %>
<%       if node.value %>
<%=        node.key.upcase %>: <%= node.value %>
<%       else %>
<%         render_header.call(node.key, depth) %>
<%       end %>
<%     when :div %>
<%       if node.key.present? %>
<%         bounds = ":" * (depth + 1) %>
<%=        bounds + " " + node.key.upcase + " " + bounds %>
<%       end %>
<%       render_tree.call(node, depth.succ) %>

<%     when :p %>
<%       unless node.value.blank? %>
<%=        escape_lines(node.value, 76) { |s| (' ' * 2) + s } %>
<%       end %>

<%     else %>
<%       alert.fixme node.kind, node.key, node.value %>
<%     end %>
<%   end %>
<% end %>
<% render_tree.call(tree) %>
